#!/bin/bash

function print_title {
  echo "------------------------------"
  echo $1
  echo "------------------------------"
  sleep 3
}

function brew_install() {
	if [ -z "`brew list | grep ^$1$`" ]; then
		echo ".... installing $1"
		brew install $1
	else
		echo ".... skipping $1"
	fi
}

function cask_install() {
	if [ -z "`brew cask list | grep ^$1$`" ]; then
		echo ".... installing $1"
		brew cask install $1
	else
		echo ".... skipping $1"
	fi
}
